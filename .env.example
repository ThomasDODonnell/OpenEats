# GoodEats Recipe PWA Environment Configuration

# Application Settings
APP_NAME="GoodEats Recipe PWA"
APP_VERSION="1.0.0"
DEBUG=true

# Security Configuration (CRITICAL: Change these in production)
SECRET_KEY="your-super-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# Database Configuration
# Development (SQLite)
# DATABASE_URL="sqlite+aiosqlite:///./goodEats.db"

# Production (PostgreSQL) - Uncomment and configure for production
DATABASE_URL="postgresql+asyncpg://username:password@localhost/goodEats_db"

# CORS Configuration
# Development - allows all origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# Production CORS - specify your domains
# CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Development Settings
RELOAD=true

